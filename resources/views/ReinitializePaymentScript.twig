    $(function () {
        if ($("#cashinadvanceModal").data("modal-loaded") == true)
        {
            // Modal is already loaded
        }
        else
        {

            $("body").append(" " +

                "<div class=\"modal fade in\" id=\"cashinadvanceModal\" data-backdrop=\"static\"> " +
                "<div class=\"modal-dialog\" role=\"dialog\">"+
                "<div class=\"modal-content\">"+

                "</div>" +
